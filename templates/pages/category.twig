{% extends "_layouts/default" %}
{% import '_utilities/teaser' as post %}
{% set postQuery = craft.entries.relatedTo(category).limit(10) %}
{% paginate postQuery as pageInfo, posts %}

{% block content %}
  <header class="container mx-auto pt-12 pb-6 px-2 text-2xl">
    <h1 class="font-bold text-4xl sm:text-6xl lg:text-9xl">{{ category.title }}</h1>
  </header>
  <section class="page__content">
    <div class="container mx-auto py-12 px-2 text-balance">
      {{ category.description }}
    </div>
      <section class="container mx-auto mb-6 px-2 divide-y divide-slate-300 prose">
        {% for post in posts %}
          {{ post.teaser(post) }}
        {% endfor %}

        {% include '_partials/pagination' with { pageInfo: pageInfo } %}
      </section>
  </section>
{% endblock %}
